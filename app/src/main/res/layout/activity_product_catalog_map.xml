<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_product_catalog_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.allergyiap.activities.ProductCatalogMapActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        map:cameraZoom="17"
        map:mapType="normal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="270dp" />

    <ImageView
        app:srcCompat="@drawable/allergy_product"
        android:id="@+id/drug"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="170dp"
        android:layout_width="170dp"
        android:layout_alignTop="@+id/drug"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <TextView
            android:text="Nasal Steroids: These are drugs you spray into your nose. The sprays work well for treating Allergic rhinitis symptoms ( such as congestion, runny nose, sneezing, itching, or swelling of the nasal passageway) "
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/des"
            android:gravity="left|center"
            android:layout_weight="0.82" />
    </LinearLayout>


</RelativeLayout>